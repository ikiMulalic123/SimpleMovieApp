<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_nav_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:src="@drawable/navigation_menu_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_12dp"
        android:text="@string/real_app_name"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/img_nav_menu"
        app:layout_constraintBottom_toBottomOf="@id/img_nav_menu"
        app:layout_constraintTop_toTopOf="@id/img_nav_menu"/>

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:src="@drawable/search_icon"
        app:layout_constraintTop_toTopOf="@id/img_nav_menu"
        app:layout_constraintEnd_toStartOf="@id/img_three_dots"
        app:layout_constraintBottom_toBottomOf="@id/img_nav_menu"/>

    <ImageView
        android:id="@+id/img_three_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:src="@drawable/three_dots_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_nav_menu"
        app:layout_constraintBottom_toBottomOf="@id/img_nav_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>