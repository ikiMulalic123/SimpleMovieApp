<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_actor_series_poster"
        android:layout_width="112dp"
        android:layout_height="128dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:background="@color/glide_place_holder"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularBorder"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/tv_actor_series_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:singleLine="false"
        android:textAlignment="textStart"
        android:textColor="@color/title_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_actor_series_poster" />

</androidx.constraintlayout.widget.ConstraintLayout>