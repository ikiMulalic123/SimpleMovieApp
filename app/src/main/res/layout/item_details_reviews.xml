<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_details_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title_text_color"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/rating_bar_details_reviews"
        style="@android:style/Widget.Holo.Light.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:backgroundTint="@color/rating_start_background"
        android:numStars="5"
        android:progressTint="@color/rating_star_red"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@id/tv_details_review_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_details_review_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/info_text_color"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_details_review_title"
        android:paddingBottom="@dimen/margin_16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>